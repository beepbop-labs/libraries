{
  "name": "@bb-labs/bldr",
  "version": "0.0.0",
  "npm": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/beepbop-labs/libraries.git"
  },
  "type": "module",
  "bin": {
    "bldr": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
