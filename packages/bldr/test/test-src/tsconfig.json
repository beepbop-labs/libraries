{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "../test-dist",
    "rootDir": "../src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["../src/**/*.ts", "../src/**/*.tsx"],
  "exclude": ["../src/node_modules"]
}
